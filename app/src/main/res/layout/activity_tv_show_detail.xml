<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.gdktuts.jetpacksubmission.ui.tvshow.TvShowDetailActivity">

    <RelativeLayout
        android:id="@+id/relativelayoutTvShowContentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageviewTvShowImage"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:contentDescription="@string/detail_content_picture"
            android:scaleType="fitXY"
            tools:src="@drawable/poster_ralph"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="370dp"
            android:background="@drawable/corner_layout"/>

        <TextView
            android:id="@+id/textviewTvShowTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="410dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center_horizontal"
            tools:text="Ralph breaks the Internet"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textviewTvShowReleaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textviewTvShowTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center_horizontal"
            tools:text="November 1, 2018"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textviewTvShowRating"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="320dp"
            android:background="@drawable/circle_shape_layout"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center_horizontal|center_vertical"
            tools:text="70%"
            android:textColor="@color/colorWhite"
            android:textSize="32sp"/>

        <TextView
            android:id="@+id/textviewTvShowOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textviewTvShowReleaseDate"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/poppins_light"
            android:gravity="center_horizontal"
            tools:text="Video game bad guy Ralph and fellow misfit Vanellope von Schweetz must risk it all by traveling to the World Wide Web in search of a replacement part to save Vanellope's video game, Sugar Rush. In way over their heads, Ralph and Vanellope rely on the citizens of the internet -- the netizens -- to help navigate their way, including an entrepreneur named Yesss, who is the head algorithm and the heart and soul of trend-making site BuzzzTube."
            android:textColor="@color/colorWhite"
            android:textSize="14sp"/>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerLayoutTvShowDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                layout="@layout/layout_detail_skeletonview"/>
        </com.facebook.shimmer.ShimmerFrameLayout>

    </RelativeLayout>

</ScrollView>
